@model RegisterViewModel
@{
    ViewData["Title"] = "Rejestracja";
}
<div class="container my-form-page">
    <div class="row">
        <div class="col-md-3">
            <h2 class="text-primary">@ViewData["Title"]</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="my-form">
                <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <h3>Utwórz nowe konto</h3>
                    <div class="my-hr"></div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Hasło</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword">Potwierdź hasło</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <section class="basic-information">
                        <h4 class="">Podstawowe informacje</h4>
                        <div class="my-hr"></div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="name">Imię</label>
                                <input class="form-control my-form-control" type="text" id="name" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="last_name">Nazwisko</label>
                                <input class="form-control my-form-control" type="text" id="last_name" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6">
                                <label for="pesel">PESEL</label>
                                <input class="form-control my-form-control" type="text" id="pesel" />
                            </div>
                            <div class="form-group col-md-6">
                                <label for="phone-number">Numer telefonu</label>
                                <input class="form-control my-form-control" type="text" id="phone-number" />
                            </div>
                        </div>
                    </section>
                    <section class="addres">
                        <h4 class="">Adres</h4>
                        <div class="my-hr"></div>
                        <div class="row">
                            <div class="form-group col-md-9">
                                <label for="city">Miasto</label>
                                <input class="form-control my-form-control" type="text" id="city" />
                            </div>
                            <div class="form-group col-md-3">
                                <label for="post-code">Kod pocztowy</label>
                                <input class="form-control my-form-control" type="text" id="post-code" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-9">
                                <label for="street">Ulica</label>
                                <input class="form-control my-form-control" type="text" id="street" />
                            </div>
                            <div class="form-group col-md-3">
                                <label for="street-number">Numer</label>
                                <input class="form-control my-form-control" type="text" id="street-number" />
                            </div>
                        </div>
                    </section>
                    <div class="form-group">
                        <button type="submit" class="btn btn-lg btn-primary text-white">Utwórz konto</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

        @section Scripts {
            @await Html.PartialAsync("_ValidationScriptsPartial")
        }
