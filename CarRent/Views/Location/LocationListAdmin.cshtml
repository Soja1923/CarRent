@model IEnumerable<Location>

@if (TempData["message"] != null)
{
    <div class="alert alert-success">@TempData["message"]</div>

}
<div class="container mt-4 mb-5">
    <h2 class="text-uppercase">Wszystkie <span class="text-primary">lokalizacje</span></h2>
    <div class="my-hr my-page-intro-rule"></div>
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary ">Dodaj lokalizacje</a>
    </div>
    <table class="table table-striped table-bordered">
        <tr>
            <th>Lokalizacja punktu</th>
            <th>Numer telefonu</th>
            <th>Adres e-mail</th>
            <th class="text-center">Akcje</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Address.City @item.Address.Street @item.Address.Number</td>
                <td>@item.Phone_Number</td>
                <td>@item.E_mail</td>
                <td class="text-center">
                    <a asp-action="Edit" class="btn btn-sm btn-warning mt-2 mb-2"
                       asp-route-locationId="@item.Location_ID">EDYTUJ</a>
                    <a asp-controller="Admin" asp-action="LocationIndex" class="btn btn-sm btn-info mt-2 mb-2"
                       asp-route-locationId="@item.Location_ID">INFO</a>
                </td>
            </tr>

        }
    </table>
</div>