@model IEnumerable<Grade>

    @if (TempData["message"] != null)
    {
        <div class="alert alert-success">@TempData["message"]</div>

    }
    <div class="container mt-4 mb-5">
        <h2 class="text-uppercase">Wszystkie <span class="text-primary">kategorie cenowe</span></h2>
        <div class="my-hr my-page-intro-rule"></div>
        <div class="row">
            <div class="col-md-4">
                <table class="table table-striped table-bordered col-md-4">
                    <tr>
                        <th>Kategoria</th>
                        <th>Cena</th>
                        <th class="text-center">Akcje</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@item.GradeType.ToString()</td>
                        <td>@item.PricePerDay</td>
                        <td class="text-center">
                            <a asp-action="Edit" class="btn btn-sm btn-warning mt-2 mb-2"
                                asp-route-gradeID="@item.Grade_ID">EDYTUJ</a>
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
      
    </div>